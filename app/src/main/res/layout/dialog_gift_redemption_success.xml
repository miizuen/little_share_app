<?xml version="1.0" encoding="utf-8"?>
<!-- Màn hình chi tiết quà với dialog overlay - HOÀN CHỈNH -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <!-- Success Icon -->
                <ImageView
                    android:id="@+id/ivSuccessIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Success"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/icon_check" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvDialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Yêu cầu đổi quà thành công"
                    android:textColor="#1A1A1A"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivSuccessIcon" />


                <!-- Remaining Points -->
                <TextView
                    android:id="@+id/tvDialogRemainingPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Điểm sẽ được trừ khi tổ chức quét QR code này"
                    android:textColor="#FF6B35"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />


                <!-- Note -->
                <TextView
                    android:id="@+id/tvDialogNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="Vui lòng mang QR code này đến địa điểm nhận quà.\nBạn sẽ nhận được thông báo khi quà được trao."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDialogRemainingPoints" />


                <!-- QR Code Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDialogQRCode"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDialogNote">

                    <ImageView
                        android:id="@+id/ivDialogQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="QR Code"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder_qr_code" />
                </androidx.cardview.widget.CardView>

                <!-- Buttons Layout -->
                <LinearLayout
                    android:id="@+id/layoutButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardDialogQRCode">

                    <!-- Save QR Button -->
                    <Button
                        android:id="@+id/btnSaveQR"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_outline"
                        android:fontFamily="sans-serif-medium"
                        android:text="Lưu QR"
                        android:textAllCaps="false"
                        android:textColor="#FF6B35"
                        android:textSize="16sp" />

                    <!-- Complete Button -->
                    <Button
                        android:id="@+id/btnDialogComplete"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_gradient"
                        android:backgroundTint="@null"
                        android:elevation="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:stateListAnimator="@null"
                        android:text="Đóng"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:backgroundTint="@null" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/volunteerAvt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/placeholder_avatar"
                android:background="@drawable/gradient_circle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVolunteerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Thị Trường"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVolunteerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="email@gmail.com"
                    android:textColor="#888"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quickaction_calendar"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Đang tham gia"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="12dp"/>

        <!-- Info Grid -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Sự kiện:" android:textColor="#888" android:textSize="12sp"/>
            <TextView android:id="@+id/tvCampaignName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xây trường mầm non" android:textColor="#333" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Vai trò:" android:textColor="#888" android:textSize="12sp"/>
            <TextView android:id="@+id/tvRoleName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đầu bếp" android:textColor="#333" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Ngày tham gia:" android:textColor="#888" android:textSize="12sp"/>
            <TextView android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11/01/2025" android:textColor="#333" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text="Xem chi tiết"
            android:textSize="13sp"
            app:backgroundTint="#7C4DFF"
            app:cornerRadius="20dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

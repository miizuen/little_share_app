<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFF8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh chiến dịch full width, bo góc trên -->
        <ImageView
            android:id="@+id/imgCampaign"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_quyengop_dochoi"/>

        <!-- Nội dung bên dưới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Dòng badge: Category + Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_pink"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="Nấu ăn và dinh dưỡng"
                    android:textColor="#FF6B6B"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_green"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="Đang chạy"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tên chiến dịch -->
            <TextView
                android:id="@+id/tvCampaignName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da_2_bold"
                android:text="Nấu ăn cho em"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <!-- Thông tin chi tiết -->
            <TextView
                android:id="@+id/tvGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="Nhóm tình nguyện Niềm Tin"
                android:textColor="#666666"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_group" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="Điện Biên"
                android:textColor="#666666"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="12/10/2025 - 30/12/2025"
                android:textColor="#666666"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_calendar" />

            <!-- Tiến độ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Tiến độ"
                android:textColor="#888888"
                android:textSize="13sp" />

            <!-- Progress bar vàng cam -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:progress="73"
                android:progressTint="#FFB74D"
                android:progressBackgroundTint="#E0E0E0"
                app:cornerRadius="6dp" />

            <!-- Phần trăm + Số tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã tài trợ"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="73%"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/baloo_da_2_bold"
                android:text="5.000.000"
                android:textColor="#2E7D32"
                android:textSize="22sp" />

            <!-- Nút Chi tiết gradient xanh lá -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_green"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
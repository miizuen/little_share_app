<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Campaign Image -->
        <ImageView
            android:id="@+id/imgCampaign"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_quyengop_dochoi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Campaign Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Giáo dục"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <!-- Campaign Name -->
            <TextView
                android:id="@+id/tvCampaignName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/baloo_da_2_bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Tên chiến dịch"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Organization -->
            <TextView
                android:id="@+id/tvGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="Tổ chức"
                android:textColor="#666666"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_group" />

            <!-- Location -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="Địa điểm"
                android:textColor="#666666"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_location" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/baloo_da_2"
                android:text="01/01/2024 - 31/01/2024"
                android:textColor="#666666"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_calendar" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_status_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Đang diễn ra"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="4dp"
            android:progress="65"
            android:progressTint="#5B9EFF" />

        <!-- Progress Text and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_da_2"
                android:text="650K / 1M"
                android:textColor="#333333"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReport"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:backgroundTint="#5B9EFF"
                android:fontFamily="@font/baloo_da_2"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
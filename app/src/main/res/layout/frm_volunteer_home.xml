<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.volunteer.frm_volunteer_home">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottom_rounded_volunteer"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="32dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/ivUserAvatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/placeholder_avatar"
                        tools:srcCompat="@drawable/img_profile_volunteer"
                        android:scaleType="centerCrop"
                        android:background="@drawable/placeholder_avatar"
                        android:clipToOutline="true" />

                    <!-- Xin chào -->
                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloo_da_2_bold"
                        android:layout_toEndOf="@id/ivUserAvatar"
                        android:layout_alignTop="@id/ivUserAvatar"
                        android:layout_marginStart="12dp" />

                    <!-- Tên người dùng -->
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jennie Kim"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/ivUserAvatar"
                        android:layout_alignBottom="@id/ivUserAvatar"
                        android:layout_marginStart="12dp" />

                    <!-- 3 ô thống kê -->
                    <LinearLayout
                        android:id="@+id/llStatsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_below="@id/ivUserAvatar"
                        android:layout_marginTop="24dp">

                        <!-- Tổng điểm -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#FFA993"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_reward_3d"
                                    android:contentDescription="Points"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvTotalPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="850"
                                    android:textColor="#FFFFFF"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"
                                    android:shadowColor="#40000000"
                                    android:shadowDx="0"
                                    android:shadowDy="1"
                                    android:shadowRadius="2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Đã tích lũy"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Số lần quyên góp -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#FFA993"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_love_3d"
                                    android:contentDescription="Donations" />

                                <TextView
                                    android:id="@+id/tvTotalDonations"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textColor="#FFFFFF"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"
                                    android:shadowColor="#40000000"
                                    android:shadowDx="0"
                                    android:shadowDy="1"
                                    android:shadowRadius="2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lần quyên góp"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Số chiến dịch -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#FFA993"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_megaphone"
                                    android:contentDescription="Campaigns" />

                                <TextView
                                    android:id="@+id/tvTotalCampaigns"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8"
                                    android:textColor="#FFFFFF"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"
                                    android:shadowColor="#40000000"
                                    android:shadowDx="0"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chiến dịch"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Quick Actions -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:weightSum="4">

                            <!-- Quyên góp -->
                            <LinearLayout
                                android:id="@+id/btnDonation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/bg_quickaction_donate"
                                    android:contentDescription="Donation"
                                    android:src="@drawable/ic_donation" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Quyên góp"
                                    android:textColor="#333333"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <!-- Lịch của tôi -->
                            <LinearLayout
                                android:id="@+id/btnSchedule"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/bg_quickaction_calendar"
                                    android:contentDescription="Schedule"
                                    android:src="@drawable/ic_calendar_3d" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Lịch của tôi"
                                    android:textColor="#333333"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <!-- Lịch sử -->
                            <LinearLayout
                                android:id="@+id/btnHistory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/bg_quickaction_history"
                                    android:contentDescription="History"
                                    android:src="@drawable/ic_hourglass" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Lịch sử"
                                    android:textColor="#333333"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <!-- Đổi quà -->
                            <LinearLayout
                                android:id="@+id/btnGifts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/bg_quickaction_gift"
                                    android:contentDescription="Gifts"
                                    android:src="@drawable/ic_gift_3d" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Đổi quà"
                                    android:textColor="#333333"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Search Bar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_search"
                                app:tint="#999999" />

                            <EditText
                                android:id="@+id/etSearch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:hint="Tìm kiếm dự án hoặc tổ chức thiện nguyện"
                                android:textColorHint="#AAAAAA"
                                android:background="@android:color/transparent"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Chip Category -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAll"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tất cả"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="true"
                                android:checked="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEducation"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giáo dục"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="false" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipFood"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nấu ăn"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEnvironment"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Môi trường"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="false" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipHealth"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Y tế"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="false" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipUrgent"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khẩn cấp"
                                android:layout_marginEnd="8dp"
                                android:textColor="@android:color/white"
                                app:chipBackgroundColor="@drawable/chip_selector"
                                app:chipCornerRadius="18dp"
                                android:checkable="false" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Urgent Campaign -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvUrgentCampaign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_urgent_campaign_border">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/ic_urgent_alert"
                                    android:background="@drawable/bg_urgent_icon" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chiến dịch khẩn cấp"
                                        android:textColor="#F44336"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvUrgentTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mùa đông ấm áp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="#212121"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvUrgentLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Miền Bắc • Cần gấp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="#757575"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tiêu đề danh sách chiến dịch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tất cả chiến dịch"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/tvCampaignCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 chiến dịch"
                            android:textColor="#999999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCampaigns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:paddingBottom="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_campaign_card" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Tên ca + Chip trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvShiftName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nấu ăn cho em"
                android:textColor="#1A1A1A"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Chip "Đang diễn ra" -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Đang diễn ra"
                android:textColor="#2E7D32"
                android:textSize="13sp"
                app:chipBackgroundColor="#B6FFB6"
                app:chipCornerRadius="16dp"
                app:chipStrokeWidth="0dp"
                app:ensureMinTouchTargetSize="false"
                android:clickable="false"
                android:focusable="false" />

        </LinearLayout>

        <!-- Thời gian ca -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="8:00 - 12:00"
                android:textColor="#555555"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Ngày đầy đủ (chỉ hiện khi ca không phải hôm nay) -->
        <TextView
            android:id="@+id/tvFullDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Chủ nhật, 20/10/2024 • 6:00 AM"
            android:textColor="#777777"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Đường kẻ ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#F0F0F0" />

        <!-- Số người đã điểm danh -->
        <TextView
            android:id="@+id/tvAttendanceCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã điểm danh 30/32 người"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
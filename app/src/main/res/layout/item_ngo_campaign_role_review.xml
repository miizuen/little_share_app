<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- ROLE NAME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group"
                app:tint="@color/primary_green_light"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvRoleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đầu bếp"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- DESCRIPTION TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tvRoleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nấu ăn chính"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            tools:text="Hầu ân chính" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                app:tint="@color/primary_green_light"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thưởng"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- POINT DESCRIPTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm tích lũy cho mỗi người *"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />


        <!-- POINT CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/light_yellow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Điểm thưởng"
                    android:textColor="@color/ff6f00"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/ff6f00" />

                <TextView
                    android:id="@+id/tvRolePoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/ff6f00"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tự 5-50 điểm tùy theo đồ khó và thời gian hoạt động"
            android:textSize="11sp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

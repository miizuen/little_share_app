<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FFF8"
    android:gravity="center_horizontal"
    tools:context=".ui.auth.logInAndSignUp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <ImageView
            android:id="@+id/backToSplashScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_back"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/primary_green_light" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/logo_little_share_app"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

    <!-- KHU VỰC OVERLAP: CardView chồng lên logo (negative margin) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="-60dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#DEFFD0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnToLogInScreen"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="@null"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="20dp"
                android:text="Đăng nhập" />

            <Button
                android:id="@+id/btnToRoleSelectionScreen"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="@null"
                android:background="@drawable/gradient_ngo"
                android:text="Đăng kí" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card_rounded_graident"> <!-- Tùy chọn gradient nhẹ -->

        <!-- PHẦN HEADER: Ảnh + Tên + Tag -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCampaignIcon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_nauanchoem"
                app:shapeAppearanceOverlay="@style/RoundedCorner16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCampaignName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nấu ăn cho em"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo_da_2_bold"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Tag Category & Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCategory"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nấu ăn &amp; Dinh dưỡng"
                        app:chipBackgroundColor="#E8F5E8"
                        app:chipStrokeWidth="0dp"
                        android:textColor="#2E7D32"
                        android:textSize="11sp" />

                    <Space android:layout_width="8dp" android:layout_height="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang diễn ra"
                        android:textColor="#EF6C00"
                        android:textSize="11sp"
                        app:chipBackgroundColor="#FFF3E0" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ĐƯỜNG KẺ MỎNG ĐẸP -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#F0F0F0" />

        <!-- THÔNG TIN CHI TIẾT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Địa điểm -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center_vertical">
                <TextView
                    android:text="Địa điểm:"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/tvCampaignDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Sơn La" android:textColor="#1A1A1A" android:textSize="14sp" android:textStyle="bold"/>
            </LinearLayout>

            <!-- Thời gian -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView
                    android:text="Thời gian:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvCampaignDateTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="01/11 – 29/12/2025" android:textColor="#1A1A1A" android:textSize="14sp" android:textStyle="bold"/>
            </LinearLayout>

            <!-- Tình nguyện viên -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView
                    android:text="Tình nguyện viên:"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/tvVolunteers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="45/62"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" android:textStyle="bold"/>
            </LinearLayout>

            <!-- Điểm thưởng -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm thưởng:"
                    android:textColor="#666"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="50 điểm" android:textColor="#7C3AED" android:textSize="15sp" android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <!-- TIẾN ĐỘ GÂY QUỸ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tiến độ gây quỹ"
            android:textColor="#424242"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvProgressNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="82%"
                android:textColor="#7C3AED"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="82"
                    android:max="100"
                    android:progressBackgroundTint="#626BA4"
                    android:progressTint="#7C3AED"
                    android:layout_gravity="center_vertical"
                    app:cornerRadius="8dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tvCurrentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123.500.000đ"
                android:textColor="#1A1A1A"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- NÚT HÀNH ĐỘNG -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Chỉnh sửa"
                android:textColor="#7C3AED"
                app:strokeColor="#7C3AED"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Xem chi tiết"
                android:textColor="@color/white"
                app:backgroundTint="#7C3AED"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
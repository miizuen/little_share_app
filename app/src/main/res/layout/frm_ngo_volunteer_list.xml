<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.ngo.frm_ngo_volunteer_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/icon_back"
                app:tint="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Danh sách tình nguyện viên"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:paddingHorizontal="16dp"
            android:paddingBottom="12dp">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_edittext_border"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="Tìm kiếm tình nguyện viên"
                android:paddingHorizontal="12dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Tab Filter -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tabAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_chip_selected"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Tất cả"
                    android:textColor="#FFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tabJoining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_default"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Đang tham gia"
                    android:textColor="#666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tabCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_default"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Hoàn thành"
                    android:textColor="#666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tabStopped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_default"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Đã dừng"
                    android:textColor="#666"
                    android:textSize="13sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- User Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/logo_thelight"
                                android:background="@drawable/gradient_circle" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nguyễn Thị Trường"
                                    android:textColor="#333"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="280 điểm  8 sự kiện"
                                    android:textColor="#888"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_quickaction_calendar"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Đang tham gia"
                                android:textColor="#000000"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="12dp"/>

                        <!-- Info Grid -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Sự kiện hiện tại:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xây trường mầm non" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Ngày tham gia:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11/01/2025" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <!-- Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:text="Tích điểm"
                            android:textSize="13sp"
                            app:backgroundTint="#7C4DFF"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/logo_d_japan"
                                android:background="@drawable/gradient_circle" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nguyễn Văn Nũy Nê"
                                    android:textColor="#333"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="300 điểm  10 sự kiện"
                                    android:textColor="#888"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gradient_volunteer"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Hoàn thành"
                                android:textColor="#000000"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Sự kiện hiện tại:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Khám sức khỏe miễn phí" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Ngày tham gia:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="22/10/2025" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:text="Tích điểm"
                            android:textSize="13sp"
                            app:backgroundTint="#7C4DFF"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/logo_d_japan"
                                android:background="@drawable/gradient_circle" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Võ Phi Phi"
                                    android:textColor="#333"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="200 điểm • 8 sự kiện"
                                    android:textColor="#888"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_status_blue"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Đã duyệt"
                                android:textColor="#000000"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Sự kiện hiện tại:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nấu ăn cho em" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Nhiệm vụ:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Khám sức khỏe miễn phí" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Ngày tham gia:" android:textColor="#888" android:textSize="12sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25/10/2025" android:textColor="#333" android:textSize="12sp"/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:text="Tích điểm"
                            android:textSize="13sp"
                            app:backgroundTint="#7C4DFF"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".ui.sponsor.activity_sponsor_donation_form">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_rounded_ngo"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_back"
            app:tint="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/baloo_da_2_bold"
            android:text="Tài trợ chiến dịch"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Campaign Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin chiến dịch"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvCampaignName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên chiến dịch"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mục tiêu: "
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvTargetBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000,000 VND"
                    android:fontFamily="@font/baloo_da_2_bold"
                    android:textSize="14sp"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiện tại: "
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvCurrentBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="650,000 VND"
                    android:fontFamily="@font/baloo_da_2_bold"
                    android:textSize="14sp"
                    android:textColor="#5B9EFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn thiếu: "
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350,000 VND"
                    android:fontFamily="@font/baloo_da_2_bold"
                    android:textSize="14sp"
                    android:textColor="#FF6A00" />

            </LinearLayout>

            <!-- Donation Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền tài trợ"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:hintTextColor="#666666"
                app:boxStrokeColor="#5B9EFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDonationAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da_2"
                    android:hint="Nhập số tiền (VND)"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quick Amount Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn nhanh"
                android:fontFamily="@font/baloo_da_2"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn100k"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#E3F2FD"
                    android:fontFamily="@font/baloo_da_2"
                    android:text="100K"
                    android:textAllCaps="false"
                    android:textColor="#5B9EFF"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn500k"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="#E3F2FD"
                    android:fontFamily="@font/baloo_da_2"
                    android:text="500K"
                    android:textAllCaps="false"
                    android:textColor="#5B9EFF"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn1m"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#E3F2FD"
                    android:fontFamily="@font/baloo_da_2"
                    android:text="1M"
                    android:textAllCaps="false"
                    android:textColor="#5B9EFF"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Donate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDonate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#5B9EFF"
                android:fontFamily="@font/baloo_da_2_bold"
                android:text="TÀI TRỢ NGAY"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Background -->

        <!-- Back Button -->
        <View
            android:id="@+id/viewHeaderBackground"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_bottom_rounded_volunteer"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="12dp"
            android:src="@drawable/icon_back"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quyên góp"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvDonationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SÁCH VỞ"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CONTENT WRAPPER -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/viewHeaderBackground">

            <!-- Chọn danh mục -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn danh mục"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- Category Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sach_giao_khoa"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Sách giáo khoa"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/background_volunteer"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sach_ky_nang"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Sách kỹ năng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_sach_thieu_nhi"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Sách thiếu nhi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_tai_lieu_hoc_tap"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Tài liệu học tập"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Số lượng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_remove"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"

                    android:elevation="8dp"
                    android:translationZ="4dp"

                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"

                    app:icon="@drawable/ic_remove"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="#000000"

                    android:contentDescription="Tăng số lượng" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"

                    android:elevation="8dp"
                    android:translationZ="4dp"

                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"

                    app:icon="@drawable/ic_add"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="#000000"

                    android:contentDescription="Tăng số lượng" />

            </LinearLayout>

            <!-- Tình trạng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- Condition Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_moi"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Mới (100%)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/background_volunteer"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_tot"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Tốt (80%-90%)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_kha"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Khá (60%-70%)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_on"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Ổn (50%)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_default"
                        app:backgroundTint="@null"
                        app:cornerRadius="24dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ghi chú -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="#E0E0E0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_note"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:hint="Ghi chú..."
                    android:gravity="top|start"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textColorHint="#CCCCCC"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Điểm ước tính -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_volunteer"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm ước tính nhận được"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="#000"
                        android:textSize="52sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút xác nhận -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_volunteer"
                android:text="Xác nhận quyên góp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="28dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
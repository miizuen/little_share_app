<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_light"
    android:id="@+id/main"
    tools:context=".volunteer_no_role"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/icon_back"
            app:title="Chiến dịch tình nguyện mới"
            app:titleTextColor="@color/text_primary" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Section: Tình nguyện viên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/primary_green_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình nguyện viên"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Số lượng tình nguyện viên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng tình nguyện viên*"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_button_green"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecreaseVolunteer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="−"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tvVolunteerCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncreaseVolunteer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>

            <!-- Yêu cầu với tình nguyện viên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu cầu với tình nguyện viên"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRequirements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Độ tuổi, sức khỏe, kỹ năng cần có..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Section: Điểm thưởng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_gift"
                    app:tint="@color/primary_green_light"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm thưởng"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Điểm tích lũy -->

            <!-- Points Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card chính -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF8E1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Dòng mô tả nhỏ -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điểm tích lũy cho mỗi người *"
                            android:textColor="#333333"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- Điểm thưởng + ngôi sao + giá trị -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Điểm thưởng"
                                android:textColor="#E65100"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_calendar_sponsor"
                                app:tint="#E65100" />

                            <TextView
                                android:id="@+id/tvPointsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#E65100"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- SeekBar tùy chỉnh -->
                        <SeekBar
                            android:id="@+id/seekBarPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="45"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@drawable/seekbar_thumb"
                            android:minHeight="8dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Chú thích nhỏ -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ 5–50 điểm tùy theo độ khó và thời gian hoạt động"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Radio Button -->
            <RadioGroup
                android:id="@+id/radioGroupPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <RadioButton
                    android:id="@+id/rbAutoPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tự 5-50 điểm tùy theo đồ khó và thời gian hoạt động"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:checked="true" />
            </RadioGroup>

            <!-- Create Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateCampaign"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tạo chiến dịch"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginBottom="20dp"
                app:backgroundTint="@null"
                android:background="@drawable/gradient_ngo"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog đăng ký thành công với QR Code -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="32dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:padding="12dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />
    <!-- Success Icon -->
    <ImageView
        android:id="@+id/ivSuccessIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Success"
        app:tint="@color/primary_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_check" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Đăng ký thành công"
        android:textColor="#1A1A1A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSuccessIcon" />

    <!-- Registration Info Container -->
    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <!-- Role Info -->

        <!-- Date and Time -->

        <TextView
            android:id="@+id/tvRoleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Bạn đã đăng kí với vai trò: Đầu bếp"
            android:textColor="#666666"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Ngày: 18/10 · 8:00-12:00"
            android:textColor="#666666"
            android:textSize="15sp" />

        <!-- QR Code Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Mã điểm danh của bạn"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- QR Code Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQRCode"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutInfo">

        <!-- QR Code Image -->
        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="QR Code"
            android:padding="20dp"
            android:scaleType="fitCenter"
                    android:src="@drawable/placeholder_qr_code" />
    </androidx.cardview.widget.CardView>

    <!-- Note Text -->
    <TextView
        android:id="@+id/tvNote"
        style="@style/Widget.Material3.MaterialTimePicker.Display.HelperText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="Lưu ý: Vui lòng chụp màn hình lại mã QR này hoặc lưu vào ảnh. Bạn sẽ cần xuất trình mã khi điểm danh."
        android:textColor="#666666"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardQRCode" />

    <!-- Complete Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComplete"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_button_gradient"
        android:fontFamily="sans-serif-medium"
        android:text="Hoàn tất"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:rippleColor="#33FFFFFF"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNote" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="2dp"
    app:strokeColor="#4AE3B5"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icon bên trái -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_bg_light">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_megaphone" />
        </FrameLayout>

        <!-- Nội dung thông báo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chiến dịch mới: Mùa đông ấm áp"
                android:textColor="#000000"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tham gia ngay để giúp đỡ bà con vùng cao"
                android:textColor="#666666"
                android:fontFamily="@font/baloo_da_2"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 giờ trước"
                android:textColor="#999999"
                android:fontFamily="@font/baloo_da_2"
                android:textSize="12sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Nút đóng (dấu X đỏ) -->
        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_red"
            android:layout_gravity="top"
            android:padding="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
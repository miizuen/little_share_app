<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Success Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_green_light"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_check"
                app:tint="@color/primary_green"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Success Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo chiến dịch thành công!"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiến dịch quyên góp của bạn đã được tạo và gửi thông báo cho các tình nguyện viên"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="28dp" />

        <!-- Campaign Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/text_link">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Campaign Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_campaign"
                        app:tint="@color/black"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tên chiến dịch:"
                        android:textColor="@color/background_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCampaignName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đón đêm bão biển Mỹ Khê"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_category"
                        app:tint="@color/black"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lĩnh vực:"
                        android:textColor="@color/background_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Môi trường"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Date Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar_sponsor"
                        app:tint="@color/black"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời gian:"
                        android:textColor="@color/background_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDateRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/11 - 31/12/2025"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back to Home Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Quay lại trang chủ"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@null"
            android:background="@drawable/gradient_ngo"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
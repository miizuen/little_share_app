<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nội dung card -->

        <ImageView
            android:id="@+id/imgCampaign"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_buacomnghiatinh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E8F5E9">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/campaignName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bữa cơm Nghĩa Tình"
                android:textColor="#000000"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Địa điểm -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FF0000" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Bệnh Viện K, Cơ sở 3 -Đống Đa,Hà Nội - Bếp Từ Tâm"
                    android:textColor="#666666"
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Thời gian -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_journey"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="15/10 - 20/10"
                    android:textColor="#666666"
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Đóng góp -->
            <TextView
                android:id="@+id/tvDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã đóng góp: 20.000.000"
                android:textColor="#000000"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDetail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="Nấu ăn và dinh dưỡng"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
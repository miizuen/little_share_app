<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image with gradient overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/imgCampaign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_buacomnghiatinh" />

            <!-- Category badge -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:text="Nấu ăn và dinh dưỡng"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="11sp"
                android:backgroundTint="#4CAF50"
                android:textAllCaps="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:elevation="2dp" />
        </FrameLayout>

        <!-- Content section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FAFAFA">

            <!-- Campaign name -->
            <TextView
                android:id="@+id/campaignName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bữa cơm Nghĩa Tình"
                android:textColor="#1A1A1A"
                android:fontFamily="@font/baloo_da_2_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FF5252" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Bệnh Viện K, Cơ sở 3 - Đống Đa, Hà Nội"
                    android:textColor="#666666"
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_journey"
                    app:tint="#9C27B0" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="15/10 - 20/10"
                    android:textColor="#666666"
                    android:fontFamily="@font/baloo_da_2"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Donation amount card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        app:tint="#4CAF50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã đóng góp"
                            android:textColor="#666666"
                            android:fontFamily="@font/baloo_da_2"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvDonation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20.000.000 VNĐ"
                            android:textColor="#2E7D32"
                            android:fontFamily="@font/baloo_da_2_bold"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_right"
                        app:tint="#4CAF50" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.ngo.activity_create_report">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_back"
            app:tint="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tạo báo cáo mới"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Chọn chiến dịch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn chiến dịch"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxStrokeColor="#5B9EFF"
                app:hintTextColor="#666666"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerCampaign"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Chọn một chiến dịch của bạn"
                    android:inputType="none"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Thông tin chiến dịch được load tự động (chỉ hiển thị, không chỉnh sửa) -->
            <LinearLayout
                android:id="@+id/layoutCampaignInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chiến dịch"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCampaignInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#F8F9FA"
                    android:padding="14dp"
                    android:text="Tên: Nấu ăn cho em\nNgân sách: 15.000.000 VNĐ\nThời gian: 01/01/2025 - 31/01/2025"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Mô tả báo cáo (người dùng tự viết) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nội dung báo cáo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="#5B9EFF"
                app:hintTextColor="#999999">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtReportContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="Viết nội dung báo cáo chi tiết tại đây..."
                    android:inputType="textMultiLine"
                    android:minHeight="160dp"
                    android:padding="14dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Chi tiết chi tiêu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Chi tiết chi tiêu"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@null"
                android:text="+ Thêm khoản chi tiêu"
                android:textAllCaps="false"
                android:textColor="#666666"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Ảnh minh họa báo cáo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Ảnh minh họa báo cáo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReportImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                tools:listitem="@layout/item_report_image" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddImages"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:text="+ Thêm ảnh minh họa (tối đa 10 ảnh)"
                android:textColor="#5B9EFF"
                android:textSize="14sp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#5B9EFF"
                app:strokeColor="#5B9EFF"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_progress_custom"
            android:backgroundTint="@null"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#5B9EFF"
            android:text="Tạo báo cáo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_document"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>

</LinearLayout>